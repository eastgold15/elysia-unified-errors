{
  "name": "elysia-package-example",
  "version": "0.1.0",
  "description": "An example Elysia package/plugin",
  "author": "Your Name",
  "license": "MIT",
  "keywords": [
    "elysia",
    "plugin",
    "bun",
    "typescript",
    "web-framework"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "bun": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "bun run --hot example/index.ts",
    "build": "pkgroll",
    "test": "bun test && npm run test:node",
    "test:node": "npm run test:node:cjs && npm run test:node:esm",
    "test:node:cjs": "node -e \"console.log('CJS test:', require('./dist/index.js'))\"",
    "test:node:esm": "node -e \"import('./dist/index.mjs').then(m => console.log('ESM test:', m))\"",
    "test:watch": "bun test --watch",
    "prepublishOnly": "bun run build && bun run test",
    "release": "npm run build && npm run test && npm publish --access public",
    "format": "prettier --write .",
    "lint": "eslint src test example --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "elysia": ">= 1.3.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "elysia": "latest",
    "pkgroll": "^2.15.3",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/elysia-package-example.git"
  },
  "homepage": "https://github.com/yourusername/elysia-package-example#readme",
  "bugs": {
    "url": "https://github.com/yourusername/elysia-package-example/issues"
  }
}